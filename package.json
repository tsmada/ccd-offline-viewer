{
  "name": "ccd-offline-viewer",
  "version": "1.0.0",
  "description": "Modern, HIPAA-compliant Continuity of Care Document viewer built with pure Electron",
  "author": "CCD Viewer Team",
  "license": "MIT",
  "main": "main.js",
  "homepage": "./",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsmada/ccd-offline-viewer.git"
  },
  "bugs": {
    "url": "https://github.com/tsmada/ccd-offline-viewer/issues"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "dist": "electron-builder --publish=never",
    "dist:mac": "electron-builder --mac --x64 --publish=never",
    "dist:mac:arm64": "electron-builder --mac --arm64 --publish=never",
    "dist:mac:universal": "electron-builder --mac --universal --publish=never",
    "dist:win": "electron-builder --win --x64 --publish=never",
    "dist:linux": "electron-builder --linux --x64 --publish=never",
    "dist-all": "electron-builder -mwl --publish=never",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "ccd",
    "cda", 
    "healthcare",
    "medical-records",
    "hipaa",
    "electron",
    "document-viewer"
  ],
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "fast-xml-parser": "^5.2.5"
  },
  "build": {
    "appId": "com.ccdviewer.app",
    "productName": "CCD Viewer",
    "copyright": "Copyright Â© 2024 CCD Viewer Team",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.medical",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Medical"
    },
    "dmg": {
      "title": "CCD Viewer ${version}",
      "format": "UDZO"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "CCD Viewer",
      "displayLanguageSelector": false
    }
  }
}